<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="110dp"
    app:cardBackgroundColor="@color/white"
    android:background="@drawable/input_bg"
    app:cardCornerRadius="20dp"
    android:layout_margin="5dp"
    app:cardElevation="10dp">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">



        <ImageView
            android:id="@+id/product_image"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="30dp"

            android:src="@drawable/ic_baseline_add_24"
            android:background="@drawable/input_bg"/>

        <TextView
            android:id="@+id/prdct_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:hint="Product_name"
            android:textColor="@color/black"
            android:paddingLeft="170dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/prdct_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:hint="Product_price"
            android:paddingLeft="195dp"
            android:textColor="@color/black"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="RM "
            android:textColor="@color/black"
            android:layout_marginTop="50dp"
            android:layout_marginLeft="170dp"/>

        <TextView
            android:id="@+id/prdct_unit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:hint="Product_unit"
            android:paddingLeft="260dp"
            android:textColor="@color/black" />

        <RatingBar
            style="@style/Widget.AppCompat.RatingBar.Small"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="170dp"
            android:layout_marginTop="80dp"
            android:numStars="5"
            android:rating="3"
            android:visibility="invisible"/>


        <ImageButton
            android:id="@+id/removeItemStore"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="350dp"
            android:layout_marginTop="10dp"
            android:background="@color/white"
            android:clickable="true"
            android:src="@drawable/ic_baseline_delete_24" />




    </RelativeLayout>


</androidx.cardview.widget.CardView>